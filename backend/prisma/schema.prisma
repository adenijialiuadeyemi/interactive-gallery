generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id          String    @id @default(cuid())
  unsplashId  String    @unique
  title       String
  author      String
  description String?
  tags        String[]
  createdAt   DateTime  @default(now())
  comments    Comment[]
  likes       Like[]
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  likes     Like[]
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  image     Image    @relation(fields: [imageId], references: [id])
  imageId   String
}

model Like {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  image     Image    @relation(fields: [imageId], references: [id])
  imageId   String
  createdAt DateTime @default(now())

  @@unique([userId, imageId])
}
